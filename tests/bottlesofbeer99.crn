fun main => none {
    var i5 counter = 99
    while(counter > 0){
        if(counter > 2){
            println("$n bottles of beer on the wall,\n$n bottles of beer.\nTake one down, pass it around,\n$n bottles of beer on the wall.\n\n".fmt(counter, counter, counter - 1))
        }
        if(counter == 2){
            println("$n bottles of beer on the wall,\n$n bottles of beer.\nTake one down, pass it around,\n$n bottle of beer on the wall.\n\n".fmt(counter, counter, counter - 1))
        }
        if(counter == 1){
            println("1 bottle of beer on the wall,\n1 bottle of beer.\nTake it down, pass it around,\nNo more bottles of beer on the wall.\n\n")
        }
        counter -= 1
    }
    println("No botles of beer on the wall,\nNo bottles of beer.\nGo to the store and buy some more,\n99 bottles of beer on the wall.\n\n")
}